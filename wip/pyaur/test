import urllib.request
import json
import subprocess

url = "https://aur.archlinux.org/rpc/?v=5&type=search&arg=google-chrome"
down_url = "https://aur.archlinux.org/"

down_json = urllib.request.urlopen(url).read()

parsed = json.loads(down_json)

to_down = down_url + parsed['results'][5]['Name'] + '.git'
subprocess.run(["git", 'clone', to_down], capture_output=True)
print('Cloned')
subprocess.run(["makepkg", "-srci"], cwd="/home/breadyx/Code/pyaur/google-chrome")
